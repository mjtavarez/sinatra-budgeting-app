<h1>Welcome, <%= @user.name %>!</h1>

<h4>JOBS</h4>
<table border="0" style="text-align: left;">
    <tr>
        <th>NAME</th>
    </tr>
    <% UserJob.where(user_id: @user.id).each do |user_job|%>    
        <tr>
            <td><a href="/jobs/<%=user_job.id%>"><%=user_job.job.name%></a></td>
        </tr>    
    <% end %>
    
</table>

<h4>ACCOUNTS</h4>
<table border="0" style="text-align: left;">
    <th>NAME</th>
    <% @user.accounts.each do |account| %>
        <tr>
            <td><a href="/accounts/<%=account.id%>"><%=account.name%></a></td>
        </tr>
    <% end %>
</table>
<br>